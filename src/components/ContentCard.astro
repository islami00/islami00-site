---
interface Props {
  href: string;
  title: string;
  imageSrc?: string | undefined;
  imageAlt?: string;
  classNames?: Partial<Record<"a",string>>;
}

// Need to spread for parent cid to be picked up: https://docs.astro.build/en/guides/styling/#passing-a-class-to-a-child-component
const { href, title, imageSrc,classNames, imageAlt = '', ...rest } = Astro.props;
---

<li >
  <a href={href} class={classNames?.a} {...rest}>
    <img width={720} height={360} src={imageSrc} alt={imageAlt} />
    <h4 class='title'>{title}</h4>
    <slot name='afterTitle' />
  </a>
</li>

<style>
  li {
    width: calc(50% - 1rem);
  }
  li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  li:first-child {
    width: 100%;
    margin-bottom: 1rem;
    text-align: center;
  }
  li:first-child img {
    width: 100%;
  }
  li:first-child .title {
    font-size: 2.369rem;
  }
  li img {
    margin-bottom: 0.5rem;
    border-radius: 12px;
  }
  li a {
    display: block;
  }
  li a:hover h4 {
    color: rgb(var(--accent));
  }
  a:hover img {
    box-shadow: var(--box-shadow);
  }
  .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1;
  }

  @media (max-width: 720px;) {
    li {
      width: 100%;
      text-align: center;
    }
    li:first-child {
      margin-bottom: 0;
    }
    li:first-child .title {
      font-size: 1.563em;
    }
  }
</style>
